<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="shrestha.shaw.librarymanagementstudent.SearchActivity">

    <TextView
        android:id="@+id/search_books"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:text="Search for Books"
        android:textColor="@android:color/darker_gray"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/developer_version_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Public Beta"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/search_isbn"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@id/developer_version_text1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:inputType="number"
        android:background="@drawable/library_id_field_background"
        android:hint="@string/enter_isbn_here"
        android:paddingStart="30dp"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/search_book_by_isbn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/search_isbn"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@id/search_isbn"
        android:background="@mipmap/search_buton"
        android:contentDescription="search_button_alt" />

</RelativeLayout>
